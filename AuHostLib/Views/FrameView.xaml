<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:plugins="clr-namespace:AuHost.Plugins;assembly=AuHostLib"
             xmlns:models="clr-namespace:AuHost.Models;assembly=AuHostLib"
             x:Class="AuHost.Views.FrameView" x:DataType="models:Frame">
    
    <ContentView.BindingContext>
        <models:Frame/>
    </ContentView.BindingContext>
    
    <ContentView.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical">
                <StackLayout x:Name="RackStack" BindableLayout.ItemsSource="{Binding .Items}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="models:Rack">
                            <Label Text="{Binding .Index}" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Add rack" Command="{Binding .AddNewRackCmd}"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentView.Content>
    
</ContentView>